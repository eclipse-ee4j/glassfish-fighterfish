<!--
	Since it uses in Java SE style, it has to explicitly configure PU with
	transaction-type=JTA and jta-data-source. 
-->
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="test.app6.entities"
		transaction-type="JTA">
		<jta-data-source>jdbc/__default</jta-data-source>
		<non-jta-data-source>jdbc/__default</non-jta-data-source>
		<class>org.glassfish.fighterfish.test.app6.entities.Employee</class>
		<class>org.glassfish.fighterfish.test.app6.entities.Department</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="create-tables" />
		</properties>
	</persistence-unit>
</persistence>
